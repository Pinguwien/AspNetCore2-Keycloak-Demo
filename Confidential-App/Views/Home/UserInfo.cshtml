@{
    ViewData["Title"] = "User Info";
}

<div class="text-center">
    <h1 class="display-4">User Info</h1>

    <div class="form-group row">
        <label for="userId" class="col-sm-2 col-form-label">UserID</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="userId" value="@Model.UserId" disabled=""></input>
        </div>
    </div>

    <div class="form-group row">
        <label for="username" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="username" value="@Model.Username" disabled=""></input>
        </div>
    </div>

    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="email" value="@Model.Email" disabled=""></input>
        </div>
    </div>
    
</div>